{
  "name": "@hyperremix/claude-code-for-gitlab",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "bun test && cd gitlab-app && (bun test 2>/dev/null || true)",
    "test:webhook": "cd gitlab-app && bun test",
    "typecheck": "tsc --noEmit",
    "webhook:dev": "cd gitlab-app && bun run dev",
    "webhook:build": "cd gitlab-app && bun run build",
    "webhook:start": "cd gitlab-app && bun run start",
    "webhook:setup": "cd gitlab-app && bun install",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "1.0.60",
    "@gitbeaker/rest": "^42.5.0",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/bun": "1.2.11",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "typescript": "^5.8.3"
  }
}
